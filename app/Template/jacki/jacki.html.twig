            <input type="hidden" name="user_id" value="{{ user.id }}">
            <input type="text" name="nouveau_nom" value="{{ user.nom }}">
            <input type="submit" value="Modifier">
        </form>
        <a href="/hello?user_id={{ user.id }}">Supprimer</a><br>
    {% endfor %}

